{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "cppbuild",
      "label": "Build Healthcare Management System",
      "command": "C:/msys64/mingw64/bin/g++.exe",
      "args": [
        "-fdiagnostics-color=always",
        "-g",
        "-Wall",
        "-Wextra",
        "src/main.cpp",
        "src/HealthcareSystem.cpp",
        "src/utils.cpp",
        "-o",
        "${workspaceFolder}/bin/HealthcareManagementSystem.exe"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": [
        "$gcc"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "detail": "Task for building the Healthcare Management System project."
    },
    {
      "label": "Create bin folder",
      "type": "shell",
      "command": "mkdir",
      "args": ["-p", "bin"],
      "problemMatcher": []
    },
    {
      "label": "Build with Folder Creation",
      "dependsOn": [
        "Create bin folder",
        "Build Healthcare Management System"
      ],
      "problemMatcher": []
    }
  ]
}
